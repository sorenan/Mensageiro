<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hiae.android.mensageiro">
    <uses-permission android:name="android.permission.VIBRATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppStartTheme"
        android:screenOrientation="portrait"


        >
        <activity android:name=".controller.RequisicaoActivity"
            android:screenOrientation="portrait"
            />

        <activity android:name=".controller.RecyclerCardActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".controller.MainActivity"
            android:screenOrientation="portrait"
            />

        <activity android:name=".controller.LoginActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"

            />
        <activity android:name=".controller.InformativoActivity.MyIntro"
            android:noHistory="true"/>
        <activity android:name=".controller.SplashActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"

            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"
                    android:screenOrientation="portrait"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
